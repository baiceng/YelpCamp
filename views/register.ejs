<% include ./partials/header %>

<div class="container mt-3">
    <h1 class="text-center">Sign Up</h1>
    <div class="row">
        <div class="col-md-6 mt-3 mx-auto">
            <form action="/register" method="POST">
                <div for="username" class="form-group">
                    <input type="text" class="form-control" id="username" name="username" placeholder="username">
                </div>
                <div for="firstName" class="form-group">
                    <input type="text" class="form-control" id="firstName" name="firstName" placeholder="first name">
                </div>
                <div for="lastName" class="form-group">
                    <input type="text" class="form-control" id="lastName" name="lastName" placeholder="last name">
                </div>
                <div for="email" class="form-group">
                    <input type="email" class="form-control" id="email" name="email" placeholder="john@deo.com">
                </div>
                <div for="password" class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="password">
                </div>
                <div for="avatar" class="form-group">
                    <input type="text" class="form-control" id="avatar" name="avatar" placeholder="avatar url">
                </div>
                <button type="submit" class="btn btn-outline-primary btn-block">Sign Up</button>
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>