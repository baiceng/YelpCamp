<% include ../partials/header %>

<div class="container mt-5">
    <h1 class="text-center">Update Campground<%= campground.name %></h1>
    <div class="row">
        <div class="col-sm-6 mx-auto">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="campName">Campground Name</label>
                    <input class="form-control" id="campName" type="text" name="campground[name]" placeholder="Name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <label for="campPric">Campground price</label>
                    <input class="form-control" id="campPric" type="number" name="campground[price]" placeholder="price" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="campImg">Campground Image</label>
                    <input class="form-control" id="campImg" type="text" name="campground[image]" placeholder="Image URL" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <label for="campLoc">Location</label>
                    <input class="form-control" id="campLoc" type="text" name="campground[location]" placeholder="Location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <label for="campDesc">Campground Description</label>
                    <textarea class="form-control" id="campDesc" name="campground[description]" placeholder="description" value="<%= campground.description %>"></textarea>
                </div>
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>