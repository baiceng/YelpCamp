<% include ../partials/header %>

<div class="container mt-5">
    <h1 class="text-center">Update Comment<%= comment.name %></h1>
    <div class="row">
        <div class="col-sm-6 mx-auto">
            <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="comText">Comment text</label>
                    <textarea class="form-control" id="comText" type="text" name="comment[text]" placeholder="Text"><%= comment.text %></textarea>
                </div>
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>